.navbar.navbar-top
  .navbar-inner
    .container
      %a.brand HaxHub
      .nav-collapse.collapse
        %button#full-screen.btn
          %img{src: 'assets/full-screen-icon.png'}
        = render 'carousel_buttons' if @projects.count > 1
        %ul.nav.pull-right
          %li.nav
            - if current_user
              = "#{current_user.login}"
              = link_to "logout", logout_path
            - else
              = link_to "Sign in with Github", github_auth_path