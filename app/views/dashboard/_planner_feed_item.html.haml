.feed-data.media{"class" => "pivotal-#{activity.status}"}
  %span.pull-left
    = image_tag("pivotal-#{activity.story_type}.png")
  .points= activity.points if activity.feature?
  .media-body
    .media-heading
      = "#{activity.message}"
      = "(#{get_initials(activity.requester)})".html_safe unless activity.status_is("unstarted") || activity.status_is("unscheduled")